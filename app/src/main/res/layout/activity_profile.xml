<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/profile_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="4dp"
                android:src="@drawable/icon_back_gray"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/image_help"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/icon_setting"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_avatar"
                android:padding="8dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/avatar_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:text="Имя Пользователеля"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/main_font"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Способы оплаты"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingStart="8dp"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                tools:ignore="HardcodedText"
                android:layout_weight="1"
                android:fontFamily="@font/main_font"
                android:background="@drawable/background_case"/>

            <TextView
                android:id="@+id/text_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Адреса"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:fontFamily="@font/main_font"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <ListView
            android:id="@+id/list1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingTop="8dp"
            android:background="@drawable/list_background"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text_active_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Активные Заказы"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="#131313"
                tools:ignore="HardcodedText"
                android:layout_weight="1"
                android:fontFamily="@font/main_font"
                android:background="@drawable/button_background"/>

            <TextView
                android:id="@+id/text_order_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="История заказов"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:fontFamily="@font/main_font"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <ListView
            android:id="@+id/listOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:paddingBottom="180dp">

            <TextView
                android:id="@+id/text_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/main_font"
                android:layout_weight="1"/>
        </LinearLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>