<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="#131313">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image_back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:src="@drawable/icon_back_gray"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Регистрация"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#11BFBF"
                        android:gravity="center"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/main_font"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Нам нужно кое-что узнать для продолжения"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#B7B7B7"
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="38dp"
                    android:fontFamily="@font/main_font"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/main_font"
                    android:text="Немного о Вас"
                    android:textColor="#595959"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Имя"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/main_font"/>
                    <EditText
                        android:id="@+id/edittext_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="20dp"
                        android:textColorHint="#607D8B"
                        android:inputType="textPersonName"
                        android:background="@drawable/background_edite_text"
                        android:maxLines="1"
                        android:lines="1"
                        android:fontFamily="@font/main_font"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Фамилия"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/main_font"/>
                    <EditText
                        android:id="@+id/edittext_surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="20dp"
                        android:textColorHint="#607D8B"
                        android:inputType="textPersonName"
                        android:background="@drawable/background_edite_text"
                        android:maxLines="1"
                        android:lines="1"
                        android:fontFamily="@font/main_font"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Отчество"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            tools:ignore="HardcodedText"
                            android:layout_weight="1"
                            android:fontFamily="@font/main_font"/>

                        <LinearLayout
                            android:id="@+id/linear_no_last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_last_name"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:padding="4dp"
                                android:src="@drawable/icon_check_box"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Нет отчества"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#B7B7B7"
                                android:gravity="center"
                                tools:ignore="HardcodedText"
                                android:fontFamily="@font/main_font"/>

                        </LinearLayout>

                    </LinearLayout>
                    <EditText
                        android:id="@+id/edittext_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="20dp"
                        android:textColorHint="#607D8B"
                        android:inputType="textPersonName"
                        android:background="@drawable/background_edite_text"
                        android:maxLines="1"
                        android:lines="1"
                        android:fontFamily="@font/main_font"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/main_font"
                        android:text="И еще немного"
                        android:textColor="#595959"
                        android:textSize="20sp"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:layout_marginTop="25dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Электронная почта"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/main_font"/>
                    <EditText
                        android:id="@+id/edittext_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#607D8B"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/background_edite_text"
                        android:maxLines="1"
                        android:lines="1"
                        android:fontFamily="@font/main_font"/>

                    <LinearLayout
                        android:id="@+id/linear_spam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_check_box"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Я хочу получать раасылку"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#B7B7B7"
                            android:gravity="center"
                            tools:ignore="HardcodedText"
                            android:fontFamily="@font/main_font"/>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Пароль"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/main_font"/>

                    <EditText
                        android:id="@+id/edittext_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="20dp"
                        android:textColorHint="#607D8B"
                        android:inputType="textPassword"
                        android:background="@drawable/background_edite_text"
                        android:maxLines="1"
                        android:lines="1"
                        android:fontFamily="@font/main_font"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_acsses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/image_confirm"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/icon_check_box"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Даю согласие на обработку персональных данных"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="#B7B7B7"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/main_font"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end |center_vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/linear_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ПРОДОЛЖИТЬ"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="40dp"
                            android:paddingEnd="40dp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_margin="10dp"
                            android:background="@drawable/button_background"
                            android:layout_gravity="center"
                            android:fontFamily="@font/main_font"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_back_white"
                            android:rotation="180"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/text_problem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Забыли пароль?"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:gravity="center"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/main_font"/>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>